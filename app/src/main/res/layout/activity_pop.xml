<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="zippler.cn.yuewu.activity.PopRecordActivity">

    <TextureView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/texture"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <RelativeLayout
        android:translationZ="10dp"
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#7d000000">
        <ImageButton
            android:id="@+id/record_close_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/back"
            android:background="#00ffffff"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            />

        <!--<TextView-->
            <!--android:id="@+id/settings"-->
            <!--android:textColor="#ffffff"-->
            <!--android:textSize="20sp"-->
            <!--android:text="@string/settings"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerInParent="true"/>-->

        <ImageButton
            android:id="@+id/setting_camera_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"
            android:src="@mipmap/setting2"
            android:background="#00000000"
            />


        <ImageButton
            android:id="@+id/fresh_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/fresh"
            android:background="#00ffffff"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:translationZ="10dp"
        android:id="@+id/record_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="#7d000000"
        >

        <!--从本地上传视频-->
        <ImageButton
            android:id="@+id/addVideo"
            android:background="#00ffffff"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp"
            android:src="@mipmap/add"
            android:contentDescription="@string/app_name" />

        <ImageButton
            android:id="@+id/recordBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            style="@style/circle_button"
            android:contentDescription="@string/app_name" />

        <!--暂停录制，继续录制-->
        <ImageButton
            android:id="@+id/pauseBtn"
            android:background="#00ffffff"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"
            android:src="@mipmap/pause"
            android:visibility="invisible"
            android:contentDescription="@string/app_name" />
    </RelativeLayout>



</RelativeLayout>
